<section class="todoapp">
	<header class="header">
		<h1><%= @list.name %></h1>
		<%= form_for [current_user, @list, @item] do |f| %>
			<%= f.text_field :description, class: "new-todo", placeholder: (@item.errors.full_messages_for(:description).first || "Enter an Item...") %>
			<%= f.submit style: "display: none", id: "create-item" %>
		<% end%>
		<%# <input class="new-todo" placeholder="Add an Item" autofocus> %>
	</header>
	<section class="main">
		<ul class="todo-list">
			<%= render collection: @list.items, partial: "items/item_li", as: :item %> <!-- This line is equal to the next three lines -->
			<%# @list.items.each do |item| %>
				<%#= render "items/item_li", item: item %>
			<%# end %>
		</ul>
	</section>
	<footer class="footer">
	</footer>
</section>

<footer class="info">
	<p>You're logged in as: <%= current_user.email %></p>
	<p><%= link_to "Logout", logout_path %></p>
</footer>

